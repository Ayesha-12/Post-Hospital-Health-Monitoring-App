<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblue"
    tools:context=".BloodPressure">
    <EditText
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/inputDiastolicId"
        android:inputType="number"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:hint="Diastolic"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:background="@drawable/edittextbuttonshape"
        android:textColor="#000000"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/inputSistolicId"
        android:inputType="number"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:hint="Sistolic"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:background="@drawable/edittextbuttonshape"
        android:textColor="#000000">
    </EditText>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/bloodSugarTakenButtonId"
        android:textSize="20sp"
        android:background="@drawable/custombuttoncolor"
        android:textColor="#ffffff"
        android:text="Click"


        />

</LinearLayout>